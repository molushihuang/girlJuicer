                android:configChanges="keyboardHidden|orientation|screenSize"
                android:hardwareAccelerated="false"
                android:launchMode="singleTop"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activity.BannerTestActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
