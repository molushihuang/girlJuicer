<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/zroot">

    <ImageButton
            android:id="@+id/ibtn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="9dp"
            android:paddingRight="19dp"
            android:background="@color/transparent"
            />
    <TextView
            android:id="@+id/tv_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:textSize="@dimen/sp_tv_titlebar_right"
            />

    <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="16dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:paddingLeft="16dp"
            android:textSize="@dimen/sp_tv_titlebar"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            />

    <TextView
            android:id="@+id/tv_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:textSize="@dimen/sp_tv_titlebar_right"
            android:layout_alignParentRight="true"
            />

    <ImageButton
            android:id="@+id/ibtn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="19dp"
            android:paddingRight="9dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            />

</RelativeLayout>
